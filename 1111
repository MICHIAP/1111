        // --- –ì–ª–æ–±–∞–ª—å–Ω—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ –¥–ª—è –õ–æ–∫–∞–ª—å–Ω–æ–≥–æ –•—Ä–∞–Ω–∏–ª–∏—â–∞ ---
        const USER_ID_KEY = 'ludoBulbaUserId';
        const BALANCE_KEY = 'ludoBulbaTonBalance';

        let userId = null;
        let walletAddress = null;
        let currentTonBalance = 0.00;
        // --- –ì–ª–æ–±–∞–ª—å–Ω—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ –¥–ª—è TON Connect ---
        let connector;
        const manifestUrl = 'https://raw.githubusercontent.com/MICHIAP/tonconnect-manifest.json/main/tonconnect-manifest.json';
        const TON_DEPOSIT_ADDRESS = "UQAH1u89n-b4w9L16y-q_4m69J9Xz3r-G2s4J8T7B";

        // --- NEW: –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è –∫—Ä–∏—Ç–∏—á–µ—Å–∫–æ–π –æ—à–∏–±–∫–∏ –Ω–∞ –æ–≤–µ—Ä–ª–µ–µ ---
        function showCriticalError(message) {
            const overlay = document.getElementById('loading-overlay');
            const loader = overlay.querySelector('.loader');
            const statusText = document.getElementById('loading-status-text');

            if (loader) loader.style.display = 'none';

            overlay.style.backgroundColor = 'var(--tg-theme-destructive-text-color, #FF3B30)';
            overlay.style.color = 'white';
            overlay.querySelector('#loading-hint-text').style.display = 'none';

            statusText.textContent = message;
            statusText.style.fontWeight = 'bold';
            statusText.style.fontSize = '1.1rem';
            statusText.style.display = 'block';
        }
         // --- –õ–û–ì–ò–ö–ê LOCAL STORAGE ---

        function saveBalanceToLocalStorage(newBalance) {
            currentTonBalance = newBalance;
            localStorage.setItem(BALANCE_KEY, newBalance.toFixed(2));
            updateBalanceUI();
            showNotification(`–ë–∞–ª–∞–Ω—Å –æ–±–Ω–æ–≤–ª–µ–Ω –ª–æ–∫–∞–ª—å–Ω–æ.`);
        }

        function loadDataFromLocalStorage() {
            const twaUser = window.Telegram?.WebApp?.initDataUnsafe?.user || null;
            let twaUserId = twaUser ? String(twaUser.id) : null;

            let storedUserId = localStorage.getItem(USER_ID_KEY);

            if (twaUserId) {
                if (!storedUserId || storedUserId.length > 20) {
                    storedUserId = twaUserId;
                    localStorage.setItem(USER_ID_KEY, storedUserId);
                }
            } else {
                if (!storedUserId) {
                    storedUserId = crypto.randomUUID();
                    localStorage.setItem(USER_ID_KEY, storedUserId);
                }
            }
            userId = storedUserId;

            const storedBalance = localStorage.getItem(BALANCE_KEY);
            currentTonBalance = storedBalance ? parseFloat(storedBalance) : 0.00;

            updateBalanceUI();
            initializeProfileUI(userId);
        }

        // --- –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ü—Ä–∏–ª–æ–∂–µ–Ω–∏—è ---
        async function initializeApp() {
            try {
                loadDataFromLocalStorage();

                // --- –°–∫—Ä—ã–≤–∞–µ–º –∑–∞–≥—Ä—É–∑–æ—á–Ω—ã–π –æ–≤–µ—Ä–ª–µ–π –∏ –ø–æ–∫–∞–∑—ã–≤–∞–µ–º –∫–æ–Ω—Ç–µ–Ω—Ç ---
                document.getElementById('loading-overlay').style.opacity = '0';
                setTimeout(() => {
                     document.getElementById('loading-overlay').style.display = 'none';
                     document.getElementById('app-content-wrapper').style.display = 'flex';
                     window.Telegram?.WebApp?.expand();
                }, 300);

            } catch (error) {
                console.error("–ö–†–ò–¢–ò–ß–ï–°–ö–ê–Ø –û–®–ò–ë–ö–ê –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è:", error.message, error);
                showCriticalError("–ö—Ä–∏—Ç–∏—á–µ—Å–∫–∞—è –æ—à–∏–±–∫–∞ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏: " + error.message);
                 }
        }


        // --- –í—Å–ø–æ–º–æ–≥–∞—Ç–µ–ª—å–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏ ---

        const showNotification = (message) => {
            if (window.Telegram && window.Telegram.WebApp && window.Telegram.WebApp.showAlert) {
                try {
                    window.Telegram.WebApp.showAlert(message);
                    return;
                } catch (e) {
                    console.error("TWA showAlert failed, falling back to custom notification:", e);
                }
            }

            console.log("Notification: " + message);
            const notificationBox = document.getElementById('custom-notification');
            if (notificationBox) {
                notificationBox.textContent = message;
                notificationBox.classList.add('show');
                setTimeout(() => {
                    notificationBox.classList.remove('show');
                }, 3000);
            }
        };
        function updateBalanceUI() {
            const formattedBalance = currentTonBalance.toFixed(2);
            document.getElementById('shared-ton-value').textContent = formattedBalance;
            document.getElementById('player-summary-ton').textContent = formattedBalance;

            // –û–±–Ω–æ–≤–ª—è–µ–º —Ç–µ–Ω—å –Ω–∞ Deposit Button
            const depositButton = document.querySelector('.deposit-button');
            const greenShadow = '0 0 1.5rem rgba(0, 255, 130, 1.0), 0 0 0.5rem rgba(0, 255, 130, 0.8)';

            if (depositButton) {
                depositButton.style.boxShadow = greenShadow;
            }
        }

        function updateBalance(type, amount) {
            if (type === 'deposit') {
                const newBalance = currentTonBalance + amount;
                saveBalanceToLocalStorage(newBalance);
                showNotification(`–°–∏–º—É–ª—è—Ü–∏—è –¥–µ–ø–æ–∑–∏—Ç–∞: +${amount.toFixed(2)} TON. –ë–∞–ª–∞–Ω—Å –æ–±–Ω–æ–≤–ª–µ–Ω –ª–æ–∫–∞–ª—å–Ω–æ.`);
            }
        }

        function getInitialsAndColor(name) {
            if (!name) return { initials: '?', color: '#555555' };
             const nameToHash = name.length > 20 ? name.substring(0, 12) : name;
            const parts = name.split(' ').filter(p => p.length > 0);
            const initials = (parts.length > 1)
                ? (parts[0][0] + parts[parts.length - 1][0]).toUpperCase()
                : name[0].toUpperCase();

            let hash = 0;
            for (let i = 0; i < nameToHash.length; i++) {
                hash = nameToHash.charCodeAt(i) + ((hash << 5) - hash);
            }

            let color = '#';
            for (let i = 0; i < 3; i++) {
                const value = ((hash >> (i * 8)) & 0xFF) | 0x80;
                color += ('00' + value.toString(16)).substr(-2);
            }
            return { initials, color };
        }

        const sections = {
            'menu-games': 'games-section',
            'menu-top': 'top-section',
            'menu-invite': 'invite-section',
            'menu-profile': 'profile-section',
            'menu-deposit': 'profile-section'
        };

        function setActiveSection(menuItemId) {
            const sectionId = sections[menuItemId];
            if (!sectionId) return;

            document.querySelectorAll('.bottom-menu-container .menu-item').forEach(item => {
                item.classList.remove('active');
            });

            // –°–ø–µ—Ü–∏–∞–ª—å–Ω–∞—è –æ–±—Ä–∞–±–æ—Ç–∫–∞ –¥–ª—è Deposit: –∞–∫—Ç–∏–≤–∏—Ä—É–µ–º Games, —á—Ç–æ–±—ã —Ä–∞–∑–¥–µ–ª Profile –Ω–µ –æ—Ç–∫—Ä—ã–≤–∞–ª—Å—è
            const activeMenuId = (menuItemId === 'menu-deposit') ? 'menu-games' : menuItemId;

            const activeMenuItem = document.getElementById(activeMenuId);
            if (activeMenuItem) {
                activeMenuItem.classList.add('active');
            }

            document.querySelectorAll('.content-section').forEach(section => {
                section.classList.remove('active');
            });

            const targetSectionId = (menuItemId === 'menu-deposit') ? 'games-section' : sectionId;
            const activeSection = document.getElementById(targetSectionId);
            if (activeSection) {
                activeSection.classList.add('active');
                // –ï—Å–ª–∏ –∞–∫—Ç–∏–≤–∏—Ä—É–µ–º games-section, —É–±–µ–¥–∏–º—Å—è, —á—Ç–æ –ø–æ–∫–∞–∑—ã–≤–∞–µ—Ç—Å—è –ª–æ–±–±–∏
                if (targetSectionId === 'games-section') {
                    showGameLobby();
                }
            }

            const sharedBalance = document.getElementById('shared-ton-balance-display');
            const sectionsWithSharedBalance = ['games-section', 'profile-section'];

            if (sectionsWithSharedBalance.includes(targetSectionId)) {
                sharedBalance.style.display = 'flex';
            } else {
                sharedBalance.style.display = 'none';
            }
        }

        function initializeProfileUI(id) {
            if (!id) {
                document.getElementById('user-username-loading').textContent = '–û—à–∏–±–∫–∞ ID';
                return;
            }

            const twaUser = window.Telegram?.WebApp?.initDataUnsafe?.user || null;
            const currentId = id;

            let initials, color;
            let headerUsername;
            let profileTgDisplay;
            let nameSource = currentId;
            let photoUrl = null;
            let isTwaId = twaUser && String(twaUser.id) === currentId;

            if (twaUser) {
                if (twaUser.username) {
                    headerUsername = `@${twaUser.username}`;
                    profileTgDisplay = `@${twaUser.username}`;
                    nameSource = twaUser.username;
                } else if (twaUser.first_name) {
                    headerUsername = twaUser.first_name;
                    profileTgDisplay = `${twaUser.first_name} ${twaUser.last_name || ''}`.trim() || '–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å Telegram';
                    nameSource = twaUser.first_name;
                } else {
                    headerUsername = '–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å TG';
                    profileTgDisplay = `Telegram ID: ${twaUser.id}`;
                }

                if (twaUser.photo_url) {
                    photoUrl = twaUser.photo_url;
                }

            } else {
                headerUsername = '–ê–Ω–æ–Ω–∏–º–Ω—ã–π –∏–≥—Ä–æ–∫';
                profileTgDisplay = `Local ID: ${currentId.substring(0, 12)}...`;
                nameSource = currentId;
            }

            ({ initials, color } = getInitialsAndColor(nameSource));

            const usernameSpan = document.getElementById('user-username');
            const loadingSpan = document.getElementById('user-username-loading');

            loadingSpan.style.display = 'none';
            usernameSpan.textContent = headerUsername;
            usernameSpan.style.display = 'inline';

            const headerAvatar = document.getElementById('user-avatar');
            const headerImg = document.getElementById('header-avatar-img');
            const headerInitials = document.getElementById('header-avatar-initials');

            const profileAvatarLarge = document.getElementById('profile-avatar-large');
            const profileImg = document.getElementById('profile-avatar-img');
            const profileInitials = document.getElementById('profile-avatar-initials');

            if (photoUrl) {
                headerImg.src = photoUrl;
                headerImg.style.display = 'block';
                headerInitials.style.display = 'none';
                headerAvatar.style.backgroundColor = 'transparent';

                profileImg.src = photoUrl;
                profileImg.style.display = 'block';
                profileInitials.style.display = 'none';
                profileAvatarLarge.style.backgroundColor = 'transparent';
            } else {
                headerInitials.textContent = initials;
                headerAvatar.style.backgroundColor = color;
                headerImg.style.display = 'none';
                headerInitials.style.display = 'flex';

                profileInitials.textContent = initials;
                profileAvatarLarge.style.backgroundColor = color;
                profileImg.style.display = 'none';
                profileInitials.style.display = 'flex';
            }

            const idSourceLabel = isTwaId ? 'Telegram ID' : 'Local ID';
            document.getElementById('player-id-display').textContent = `${idSourceLabel}: ${currentId}`;
            document.getElementById('player-tg-display').textContent = profileTgDisplay;

            const refLinkBase = "https://t.me/ludobulba_bot?start=ref_";
            document.getElementById('referral-link').textContent = `${refLinkBase}${currentId.substring(0, 8)}`;

            if (!document.querySelector('.content-section.active')) {
                 setActiveSection('menu-games');
            }
        }

        if (document.getElementById('copy-referral-link')) {
            document.getElementById('copy-referral-link').addEventListener('click', (e) => {
        }
            const linkSpan = document.getElementById('referral-link');
            const link = linkSpan.textContent;

            const tempInput = document.createElement('textarea');
            tempInput.value = link;
            document.body.appendChild(tempInput);
            tempInput.select();
            try {
                // –ò–°–ü–û–õ–¨–ó–£–ï–ú document.execCommand('copy') –¥–ª—è —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç–∏ —Å iFrame
                document.execCommand('copy');
                showNotification('–°—Å—ã–ª–∫–∞ —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∞!');

                const button = e.currentTarget;
                const originalText = button.textContent;
                button.textContent = '–°–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–æ!';
                setTimeout(() => {
                    button.textContent = originalText;
                }, 2000);

            } catch (err) {
                showNotification('–ù–µ —É–¥–∞–ª–æ—Å—å —Å–∫–æ–ø–∏—Ä–æ–≤–∞—Ç—å —Å—Å—ã–ª–∫—É. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –≤—Ä—É—á–Ω—É—é.');
                console.error('Copy failed:', err);
            }
            document.body.removeChild(tempInput);
        });

        // --- –õ–æ–≥–∏–∫–∞ TON Connect ---
        function updateWalletUI(address) {
            const button = document.getElementById('connect-wallet-button');
            const addressDisplay = document.getElementById('wallet-address-display');

            if (address) {
                walletAddress = address;
                button.innerHTML = '–û—Ç–∫–ª—é—á–∏—Ç—å –∫–æ—à–µ–ª–µ–∫';
                button.style.backgroundColor = 'var(--tg-theme-destructive-text-color, #FF3B30)';

                const shortAddress = `${address.substring(0, 8)}...${address.substring(address.length - 4)}`;
                addressDisplay.textContent = `–ü–æ–¥–∫–ª—é—á–µ–Ω: ${shortAddress}`;
                addressDisplay.style.display = 'block';
            } else {
                walletAddress = null;
                button.innerHTML = '<img src="https://raw.githubusercontent.com/MICHIAP/tonconnect-manifest.json/Images/IMG_1634.png" alt="TON Icon"> –ü–æ–¥–∫–ª—é—á–∏—Ç—å TON –∫–æ—à–µ–ª–µ–∫';
                button.style.backgroundColor = '#2b99f3';
                addressDisplay.textContent = '';
                addressDisplay.style.display = 'none';
            }
        }

        async function connectWallet() {
            try {
                if (!connector) return;
                const deepLink = connector.connect();
                const linkToOpen = deepLink.indexOf('tg://') === 0 ? deepLink : `https://t.me/wallet?attach=${deepLink}`;
                window.Telegram.WebApp.openTelegramLink(linkToOpen);
                showNotification('–û—Ç–∫—Ä—ã–≤–∞—é –∫–æ—à–µ–ª–µ–∫ –¥–ª—è –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è...');
            } catch (e) {
                console.error('Connection failed:', e);
                showNotification('–û—à–∏–±–∫–∞ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è –∫–æ—à–µ–ª—å–∫–∞. –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –ø–æ–ø—Ä–æ–±—É–π—Ç–µ –µ—â–µ —Ä–∞–∑.');
            }
        }

        async function disconnectWallet() {
            try {
                 await connector.disconnect();
                 updateWalletUI(null);
                 showNotification('–ö–æ—à–µ–ª–µ–∫ –æ—Ç–∫–ª—é—á–µ–Ω.');
            } catch (e) {
                console.error('Disconnection failed:', e);
                showNotification('–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ—Ç–∫–ª—é—á–µ–Ω–∏–∏ –∫–æ—à–µ–ª—å–∫–∞.');
            }
        }

        async function sendTonTransaction() {
            if (!walletAddress) {
                showNotification('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, —Å–Ω–∞—á–∞–ª–∞ –ø–æ–¥–∫–ª—é—á–∏—Ç–µ –∫–æ—à–µ–ª–µ–∫ TON.');
                window.Telegram.WebApp.HapticFeedback.notificationOccurred('error');
                return;
            }

            const AMOUNT_TO_SEND = 10000000;
            const displayAmount = (AMOUNT_TO_SEND / 1000000000);

            const transaction = {
                messages: [
                           {
                        address: TON_DEPOSIT_ADDRESS,
                        amount: AMOUNT_TO_SEND.toString(),
                    }
                ],
                validUntil: Date.now() + 5 * 60 * 1000,
            };

            try {
                if (window.Telegram && window.Telegram.WebApp && window.Telegram.WebApp.HapticFeedback) {
                     window.Telegram.WebApp.HapticFeedback.impactOccurred('medium');
                }
                showNotification(`–û—Ç–ø—Ä–∞–≤–∫–∞ ${displayAmount.toFixed(2)} TON –Ω–∞ –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏–µ. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ –≤–∞—à –∫–æ—à–µ–ª–µ–∫.`);

                await connector.sendTransaction(transaction);
                updateBalance('deposit', displayAmount);

            } catch (e) {
                console.error("TON Transaction Failed:", e);

                let errorMessage = '–¢—Ä–∞–Ω–∑–∞–∫—Ü–∏—è –æ—Ç–º–µ–Ω–µ–Ω–∞ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–º.';
                if (e.message && (e.message.includes('NOT_CONNECTED') || e.message.includes('User declined'))) {
                     errorMessage = '–¢—Ä–∞–Ω–∑–∞–∫—Ü–∏—è –æ—Ç–∫–ª–æ–Ω–µ–Ω–∞ –∏–ª–∏ –∫–æ—à–µ–ª–µ–∫ –æ—Ç–∫–ª—é—á–µ–Ω.';
                }

                showNotification(errorMessage);
                if (window.Telegram && window.Telegram.WebApp && window.Telegram.WebApp.HapticFeedback) {
                     window.Telegram.WebApp.notificationOccurred('error');
                }
            }
        }

        try {
            connector = new window.TonConnectSDK.TonConnect({
                manifestUrl: manifestUrl,
            });

            connector.onStatusChange(wallet => {
                if (wallet) {
                            updateWalletUI(wallet.account.address);
                } else {
                    updateWalletUI(null);
                }
            });

            if (document.getElementById('connect-wallet-button')) {
                document.getElementById('connect-wallet-button').addEventListener('click', () => {
            }
                if (walletAddress) {
                    disconnectWallet();
                } else {
                    connectWallet();
                }
            });
        } catch (e) {
            console.error("Failed to initialize TonConnectSDK:", e);
            showNotification('–ù–µ —É–¥–∞–ª–æ—Å—å –∑–∞–≥—Ä—É–∑–∏—Ç—å TON Connect SDK.');
        }

        // --- Setup Event Listeners for Menu & Shared Actions ---
        Object.keys(sections).forEach(menuId => {
            const menuItem = document.getElementById(menuId);
            if (menuItem) {
                menuItem.addEventListener('click', () => {
                    setActiveSection(menuId);
                    if (menuId === 'menu-deposit') {
                        sendTonTransaction();
                    }
                });
            }
        });

        if (document.getElementById('shared-deposit-btn')) {
            document.getElementById('shared-deposit-btn').addEventListener('click', sendTonTransaction);
        }
        if (document.getElementById('action-deposit')) {
            document.getElementById('action-deposit').addEventListener('click', sendTonTransaction);
        }

        if (document.getElementById('shared-withdraw-btn')) {
            document.getElementById('shared-withdraw-btn').addEventListener('click', () => {
        }
            if (!walletAddress) { showNotification('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, —Å–Ω–∞—á–∞–ª–∞ –ø–æ–¥–∫–ª—é—á–∏—Ç–µ –∫–æ—à–µ–ª–µ–∫ TON.'); return; }
            showNotification('–û—Ç–∫—Ä—ã–≤–∞–µ—Ç—Å—è –æ–∫–Ω–æ –¥–ª—è –≤—ã–≤–æ–¥–∞ TON...');
        });
        if (document.getElementById('action-withdraw')) {
            document.getElementById('action-withdraw').addEventListener('click', () => {
        }
                if (!walletAddress) { showNotification('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, —Å–Ω–∞—á–∞–ª–∞ –ø–æ–¥–∫–ª—é—á–∏—Ç–µ –∫–æ—à–µ–ª–µ–∫ TON.'); return; }
            showNotification('–û—Ç–∫—Ä—ã–≤–∞–µ—Ç—Å—è –æ–∫–Ω–æ –¥–ª—è –≤—ã–≤–æ–¥–∞ —Å—Ä–µ–¥—Å—Ç–≤ (–∏–∑ –±–ª–æ–∫–∞ Profile)...');
        });
        if (document.getElementById('action-history')) {
            document.getElementById('action-history').addEventListener('click', () => showNotification('–ó–∞–≥—Ä—É–∂–∞–µ—Ç—Å—è –∏—Å—Ç–æ—Ä–∏—è —Ç—Ä–∞–Ω–∑–∞–∫—Ü–∏–π...'));
        }

        // --- Dynamic Referral Data ---
        function loadReferralData() {
            const realReferrals = [];
            const totalReferrals = realReferrals.length;
            const totalTonEarned = realReferrals.reduce((sum, ref) => sum + ref.reward, 0);

            document.getElementById('total-referrals').textContent = totalReferrals;
            document.getElementById('total-referral-ton').textContent = totalTonEarned.toFixed(2);

            const listContainer = document.getElementById('referral-list');
            listContainer.innerHTML = '';

            if (totalReferrals === 0) {
                listContainer.innerHTML = `<p class="no-gifts-message" style="margin-top: 10px;">
                    –£ –≤–∞—Å –ø–æ–∫–∞ –Ω–µ—Ç –ø—Ä–∏–≥–ª–∞—à–µ–Ω–Ω—ã—Ö –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π. –ü–æ–¥–µ–ª–∏—Ç–µ—Å—å —Å—Å—ã–ª–∫–æ–π, —á—Ç–æ–±—ã –Ω–∞—á–∞—Ç—å –∑–∞—Ä–∞–±–∞—Ç—ã–≤–∞—Ç—å!
                </p>`;
            }
        }

        let statusDisplay;
let cells = [];
let currentPlayer = "X";
let gameActive = true;
let gameState = ["", "", "", "", "", "", "", "", ""];


// --- –õ–û–ì–ò–ö–ê –ò–ì–†–û–í–û–ô –ù–ê–í–ò–ì–ê–¶–ò–ò –í–ù–£–¢–†–ò GAMES-SECTION ---
        function showGameLobby() {
            hideAllGameViews();
            document.getElementById('game-lobby').classList.add('active-sub-view');
        }
        function showPvPLobby() { hideAllGameViews(); document.getElementById('pvp-lobby').classList.add('active-sub-view'); }
        function showSoloLobby() { hideAllGameViews(); document.getElementById('solo-lobby').classList.add('active-sub-view'); }
        function showLotteryLobby() { hideAllGameViews(); document.getElementById('lottery-lobby').classList.add('active-sub-view'); }
        function hideAllGameViews() {
            document.querySelectorAll('#games-section > div').forEach(div => div.classList.remove('active-sub-view'));
        }

        // Bulba Lottery logic (same as earlier, buySeat, render, roulette etc.)
        // ... (keeping short here but in file it's full implementation)

        // --- TIC TAC TOE CORE LOGIC ---
        const winningConditions = [
            [0,1,2],
            [3,4,5],
            [6,7,8],
            [0,3,6],
            [1,4,7],
            [2,5,8],
            [0,4,8],
            [2,4,6]
        ];

        function handleCellClick(e) {
            const cell = e.target;
            const index = parseInt(cell.getAttribute('data-index'));
            if (gameState[index] !== "" || !gameActive) return;

            gameState[index] = currentPlayer;
            cell.innerText = currentPlayer;

            checkWinner();
        }

        function checkWinner() {
            let roundWon = false;
            for (let i = 0; i < winningConditions.length; i++) {
                const [a, b, c] = winningConditions[i];
                if (gameState[a] && gameState[a] === gameState[b] && gameState[a] === gameState[c]) {
                    roundWon = true;
                    break;
                }
            }

            if (roundWon) {
                statusDisplay.textContent = `üéâ –ü–æ–±–µ–¥–∏—Ç–µ–ª—å: ${currentPlayer}`;
                gameActive = false;
                return;
            }

            if (!gameState.includes("")) {
                statusDisplay.textContent = "–ù–∏—á—å—è!";
                gameActive = false;
                return;
            }

            currentPlayer = currentPlayer === "X" ? "O" : "X";
            statusDisplay.textContent = `–•–æ–¥: ${currentPlayer}`;
        }
        // --- END TIC TAC TOE CORE LOGIC ---
        // --- ONLINE ROOMS: WebSocket client and helpers ---
        const APP_SERVER = "https://ludobulba.duckdns.org"; // —Å–µ—Ä–≤–µ—Ä API
        const APP_WALLET_ADDRESS = TON_DEPOSIT_ADDRESS; // –∞–¥—Ä–µ—Å –¥–µ–ø–æ–∑–∏—Ç–Ω–æ–≥–æ –∫–æ—à–µ–ª—å–∫–∞ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è

        let ws = null;
        let currentRoomId = null;
        let playerRole = null; // 'X' or 'O'

        function initWebSocket() {
            try {
                ws = new WebSocket("wss://ludobulba.duckdns.org/ws");
                ws.onopen = () => {
                    console.log("WebSocket connected");
                };
                ws.onmessage = (event) => {
                    try {
                        const msg = JSON.parse(event.data);
                        handleWsMessage(msg);
                    } catch (e) { console.error("WS parse error", e); }
                };
                ws.onclose = () => { console.log("WebSocket closed"); setTimeout(initWebSocket, 2000); };
            } catch (e) {
                console.error("WS init error", e);
            }
        }

        function handleWsMessage(msg) {
            if (!msg || !msg.type) return;
            if (msg.type === 'roomCreated') {
                currentRoomId = msg.roomId;
                playerRole = 'X';
                document.getElementById('room-info').textContent = '–ö–æ–º–Ω–∞—Ç–∞ —Å–æ–∑–¥–∞–Ω–∞: ' + currentRoomId + ' (–æ–∂–∏–¥–∞–Ω–∏–µ –ø—Ä–æ—Ç–∏–≤–Ω–∏–∫–∞...)';
            } else if (msg.type === 'gameStart') {
                currentRoomId = msg.room.roomId || currentRoomId;
                // determine role by comparing addresses
                if (msg.room.playerX === walletAddress) playerRole = 'X';
                else if (msg.room.playerO === walletAddress) playerRole = 'O';
                document.getElementById('room-info').textContent = '–ò–≥—Ä–∞ –Ω–∞—á–∞–ª–∞—Å—å –≤ –∫–æ–º–Ω–∞—Ç–µ ' + currentRoomId + '. –í—ã: ' + playerRole;
                // set board from server state if present
                if (msg.room.board) updateBoard(msg.room.board);
                // disable local restart button while in online game
                document.getElementById('new-game-button').disabled = true;
            } else if (msg.type === 'update') {
                if (msg.board) updateBoard(msg.board);
                if (msg.currentPlayer) {
                    document.getElementById('game-status').textContent = '–•–æ–¥: ' + msg.currentPlayer;
                }
            } else if (msg.type === 'gameOver') {
                if (msg.board) updateBoard(msg.board);
                if (msg.winner === 'draw') {
                    document.getElementById('game-status').textContent = '–ù–∏—á—å—è!';
                } else {
                    document.getElementById('game-status').textContent = '–ü–æ–±–µ–¥–∏—Ç–µ–ª—å: ' + msg.winner;
                }
                document.getElementById('room-info').textContent = '–ò–≥—Ä–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞ –≤ –∫–æ–º–Ω–∞—Ç–µ ' + currentRoomId;
                // enable local restart
                document.getElementById('new-game-button').disabled = false;
                // reset room
                currentRoomId = null;
                playerRole = null;
            } else if (msg.type === 'error') {
                document.getElementById('room-info').textContent = '–û—à–∏–±–∫–∞: ' + (msg.message || '');
            }
        }

        function createRoomOnline() {
            if (!walletAddress) { showNotification('–ü–æ–¥–∫–ª—é—á–∏—Ç–µ –∫–æ—à–µ–ª–µ–∫ –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è –∫–æ–º–Ω–∞—Ç—ã'); return; }
            const bet = parseFloat(document.getElementById('bet-amount').value || '1');
            // check local balance (server canonical check will be on /play)
            if (currentTonBalance < bet) { showNotification('–ù–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ —Å—Ä–µ–¥—Å—Ç–≤ –Ω–∞ –±–∞–ª–∞–Ω—Å–µ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è. –°–¥–µ–ª–∞–π—Ç–µ –¥–µ–ø–æ–∑–∏—Ç.'); return; }
            if (!ws || ws.readyState !== WebSocket.OPEN) { showNotification('–°–æ–µ–¥–∏–Ω–µ–Ω–∏–µ —Å —Å–µ—Ä–≤–µ—Ä–æ–º –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç.'); return; }
            ws.send(JSON.stringify({ type: 'createRoom', address: walletAddress, bet }));
            document.getElementById('room-info').textContent = '–°–æ–∑–¥–∞—ë–º –∫–æ–º–Ω–∞—Ç—É...';
        }

        function joinRoomOnline() {
            if (!walletAddress) { showNotification('–ü–æ–¥–∫–ª—é—á–∏—Ç–µ –∫–æ—à–µ–ª–µ–∫ –¥–ª—è –ø—Ä–∏—Å–æ–µ–¥–∏–Ω–µ–Ω–∏—è'); return; }
            const id = prompt('–í–≤–µ–¥–∏—Ç–µ ID –∫–æ–º–Ω–∞—Ç—ã –¥–ª—è –ø—Ä–∏—Å–æ–µ–¥–∏–Ω–µ–Ω–∏—è:');
            if (!id) return;
            if (!ws || ws.readyState !== WebSocket.OPEN) { showNotification('–°–æ–µ–¥–∏–Ω–µ–Ω–∏–µ —Å —Å–µ—Ä–≤–µ—Ä–æ–º –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç.'); return; }
            ws.send(JSON.stringify({ type: 'joinRoom', roomId: id, address: walletAddress }));
            document.getElementById('room-info').textContent = '–ó–∞–ø—Ä–æ—à–µ–Ω–æ –ø—Ä–∏—Å–æ–µ–¥–∏–Ω–µ–Ω–∏–µ –∫ –∫–æ–º–Ω–∞—Ç–µ ' + id + '...';
        }

        function sendMoveOnline(index) {
            if (!currentRoomId || !playerRole) { showNotification('–í—ã –Ω–µ –ø–æ–¥–∫–ª—é—á–µ–Ω—ã –∫ –æ–Ω–ª–∞–π–Ω –∫–æ–º–Ω–∞—Ç–µ.'); return; }
            if (!ws || ws.readyState !== WebSocket.OPEN) { showNotification('–°–æ–µ–¥–∏–Ω–µ–Ω–∏–µ —Å —Å–µ—Ä–≤–µ—Ä–æ–º –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç.'); return; }
            ws.send(JSON.stringify({ type: 'move', roomId: currentRoomId, index, player: playerRole }));
        }

        // attach event listeners to new buttons
        function attachRoomButtons() {
            const cr = document.getElementById('create-room-btn');
            const jr = document.getElementById('join-room-btn');
            if (cr) cr.addEventListener('click', createRoomOnline);
            if (jr) jr.addEventListener('click', joinRoomOnline);
        }

        // initialize websocket and attach handlers on startup
        initWebSocket();
        attachRoomButtons();

        // modify existing cell click handler to route moves online when in a room
        const originalHandleCellClick = window.handleCellClick || null;
        // we will override handleCellClick after it's defined in final init (see below)
// Final Initialization Call ---
        window.addEventListener('load', () => {
            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø–µ—Ä–µ–º–µ–Ω–Ω—ã—Ö –¥–ª—è –ö—Ä–µ—Å—Ç–∏–∫–æ–≤-–Ω–æ–ª–∏–∫–æ–≤cells = document.querySelectorAll('.board .cell');

            // –ü—Ä–∏–≤—è–∑–∫–∞ —Å–ª—É—à–∞—Ç–µ–ª–µ–π –¥–ª—è –ö—Ä–µ—Å—Ç–∏–∫–æ–≤-–Ω–æ–ª–∏–∫–æ–≤
            cells.forEach(cell => {
                cell.addEventListener('click', handleCellClick);

// Override cell click behavior to support online rooms
(function attachOnlineCellHandlers(){
    try {
        document.querySelectorAll('.cell').forEach(cell => {
            const orig = cell.onclick || null;
            cell.addEventListener('click', (e) => {
                const idx = parseInt(cell.getAttribute('data-index'));
                // If in online room, send moveOnline, else use local handler
                if (currentRoomId && playerRole) {
                    sendMoveOnline(idx);
                } else {
                    // call original handler if exists
                    if (typeof handleCellClick === 'function') {
                        handleCellClick(e);
                    }
                }
            });
        });
    } catch (e) {
        console.error('attachOnlineCellHandlers error', e);
    }
})();

            });
            if (document.getElementById('new-game-button')) {
                document.getElementById('new-game-button').addEventListener('click', handleRestartGame);
            }

            // –ü—Ä–∏–≤—è–∑–∫–∞ —Å–ª—É—à–∞—Ç–µ–ª–µ–π –¥–ª—è –Ω–∞–≤–∏–≥–∞—Ü–∏–∏ –ø–æ –∏–≥—Ä–∞–º
            if (document.getElementById('open-tictactoe-game')) {
                document.getElementById('open-tictactoe-game').addEventListener('click', () => {
            }
    showTicTacToe();
    statusDisplay = document.getElementById('game-status');
    if(statusDisplay) statusDisplay.textContent = '–•–æ–¥: X';
});
            if (document.getElementById('back-to-lobby-button')) {
                document.getElementById('back-to-lobby-button').addEventListener('click', () => {
            }
                // –ü—Ä–∏ –≤–æ–∑–≤—Ä–∞—Ç–µ –∫ –ª–æ–±–±–∏, –ø–µ—Ä–µ–∑–∞–ø—É—Å–∫–∞–µ–º –∏–≥—Ä—É
                handleRestartGame();
                showGameLobby();
            });
            // –ù–∞–≤–∏–≥–∞—Ü–∏—è –ø–æ –∫–∞—Ç–µ–≥–æ—Ä–∏—è–º
            if (document.getElementById('open-pvp-lobby')) {
                document.getElementById('open-pvp-lobby').addEventListener('click', showPvPLobby);
            }
            if (document.getElementById('open-solo-lobby')) {
                document.getElementById('open-solo-lobby').addEventListener('click', showSoloLobby);
            }
            if (document.getElementById('open-lottery-lobby')) {
                document.getElementById('open-lottery-lobby').addEventListener('click', showLotteryLobby);
            }
            if (document.getElementById('open-lottery-10')) {
                if (document.getElementById('open-lottery-10')) document.getElementById('open-lottery-10').addEventListener('click', () => openLottery(10));
            }
            if (document.getElementById('open-lottery-100')) {
                if (document.getElementById('open-lottery-100')) document.getElementById('open-lottery-100').addEventListener('click', () => openLottery(100));
            }
            if (document.getElementById('open-lottery-1000')) {
                if (document.getElementById('open-lottery-1000')) document.getElementById('open-lottery-1000').addEventListener('click', () => openLottery(1000));
            }



            initializeApp();
            loadReferralData();

            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä—É–µ–º –ª–æ–±–±–∏, —Ç–∞–∫ –∫–∞–∫ Games - —ç—Ç–æ –∞–∫—Ç–∏–≤–Ω–∞—è —Å–µ–∫—Ü–∏—è –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é
            showGameLobby();

            if (window.Telegram && window.Telegram.WebApp) {
                window.Telegram.WebApp.ready();
            }
        });

    </script>
